<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_how_to_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kjbkjjn.badmatch.pageHowToPlay"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="簡單的抽籤遊戲，數字旁的加減號可以選擇遊戲人數，人數為2~8人。按下「開始」即可進行抽籤"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.95"
        android:textSize="25sp" />

    <Button
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:id="@+id/gohome2"
        android:background="@drawable/gohome"
        android:layout_marginTop="300dp" />
</LinearLayout>
